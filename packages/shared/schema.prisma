generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  MANAGER
  STAFF
  OWNER
  PENDING
  OBSERVER
}

enum SpaceType {
  ROOM
  PUBLIC
  OUTDOOR
  BOH
  VENUE
  WELLNESS
  ATMOS
  SERVICE
}

enum SpaceStatus {
  DIRTY
  CLEANING
  INSPECTED
  OCCUPIED
  READY
  OUT_OF_ORDER
  OUT_OF_SERVICE
}

enum TaskStatus {
  NEW
  TRIAGED
  ASSIGNED
  IN_PROGRESS
  BLOCKED
  READY_FOR_INSPECTION
  REOPENED
  DONE
  VERIFIED
  CLOSED
}

enum TaskPriority {
  P1
  P2
  P3
}

enum TaskType {
  HK
  MAINTENANCE
  FRONT_DESK
  WELLNESS
  FNB
  INSPECTION
  PREVENTIVE
  OTHER
}

model User {
  id        String   @id @default(uuid())
  telegramId String? @unique
  name      String
  email     String?  @unique
  role      UserRole @default(STAFF)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isOnShift Boolean @default(false)
  department String? // Team (HK, MAINTENANCE, FRONT_DESK). Optional for Admin/Observer

  tasksAssigned Task[] @relation("TaskAssignee")
  tasksReported Task[] @relation("TaskReporter")
  activityLogs  ActivityLog[]
}

model Property {
  id   String @id @default(uuid())
  name String
  zones Zone[]
}

model Zone {
  id         String @id @default(uuid())
  name       String
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id])
  spaces     Space[]
}

enum BusinessUnit {
  HOTEL
  FNB
  EVENTS
  ATMOS
}

model Space {
  id        String      @id @default(uuid())
  name      String
  type      SpaceType
  status    SpaceStatus @default(DIRTY)
  description String?   // Freeform description
  blockingReason String? // Reason for OOO status
  blockedUntil DateTime? // When the block expires
  businessUnit BusinessUnit? // Optional for now
  zoneId    String
  zone      Zone        @relation(fields: [zoneId], references: [id])
  tasks     Task[]
  equipment Equipment[]
  activityLogs ActivityLog[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Equipment {
  id           String  @id @default(uuid())
  name         String
  serialNumber String?
  category     String?
  spaceId      String
  space        Space   @relation(fields: [spaceId], references: [id])
  tasks        Task[]
}

model Task {
  id          String       @id @default(uuid())
  friendlyId  Int          @unique @default(autoincrement())
  title       String
  description String?
  status      TaskStatus   @default(NEW)
  priority    TaskPriority @default(P3)
  type        TaskType
  spaceId     String?
  space       Space?       @relation(fields: [spaceId], references: [id])
  customLocation String?
  equipmentId String?
  equipment   Equipment?   @relation(fields: [equipmentId], references: [id])
  assigneeId  String?
  assignee    User?        @relation("TaskAssignee", fields: [assigneeId], references: [id])
  reporterId  String?
  reporter    User?        @relation("TaskReporter", fields: [reporterId], references: [id])
  dueAt       DateTime?
  startedAt   DateTime?
  completedAt DateTime?
  isGuestImpact Boolean @default(false)
  responseTimeMinutes Int?
  images      String[]
  blockLocationUntil DateTime?
  
  // Inspection Fields
  readyAt          DateTime?
  inspectorId      String?
  inspectionResult String? // PASS, FAIL
  inspectionNotes  String?
  reopenCount      Int       @default(0)
  linkedTaskId     String?   // For Escalation

  templateId  String?
  template    TaskTemplate? @relation(fields: [templateId], references: [id])

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  activityLogs ActivityLog[]
}

model TaskTemplate {
  id           String   @id @default(uuid())
  title        String
  description  String?
  cronSchedule String
  type         TaskType
  category     String?
  tasks        Task[]
}

model ActivityLog {
  id        String   @id @default(uuid())
  taskId    String?
  task      Task?    @relation(fields: [taskId], references: [id])
  spaceId   String?
  space     Space?   @relation(fields: [spaceId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  action    String
  metadata  Json?
  createdAt DateTime @default(now())
}
